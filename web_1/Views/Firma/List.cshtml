@model IEnumerable<EfCore2C.Models.Firma>
﻿@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer localizer
@{
    Layout = "_AdminLayout";
}
@if (TempData["basarli_Firma_create"] is not null)
{
    <div class="alert alert-success">@TempData["basarli_Firma_create"]</div>
}
@if (TempData["basarli_Firma_edit"] is not null)
{
    <div class="alert alert-success">@TempData["basarli_Firma_edit"]</div>
}
@if (TempData["basarli_Firma_delete"] is not null)
{
    <div class="alert alert-danger">@TempData["basarli_Firma_delete"]</div>
}

<h1>@localizer["FirmaList_Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">@localizer["List_CreateNew"]</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @localizer["Firma_FirmaId"]
            </th>
            <th>
                @localizer["Firma_FirmaAdi"]
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.firma_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.firma_adi)
                </td>
                <td>
                    <div class="btn-group" role="group" aria-label="Action Buttons">
                        <a asp-action="Edit" asp-route-id="@item.firma_id" type="button" class="btn btn-primary">@localizer["Edit"]</a>
                        <a asp-action="Details" asp-route-id="@item.firma_id" type="button" class="btn btn-primary">@localizer["List_Details"]</a>
                        <a asp-action="Delete" asp-route-id="@item.firma_id" type="button" class="btn btn-primary">@localizer["Delete"]</a>

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
