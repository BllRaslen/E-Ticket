@model web_1.Models.Person




@if (TempData["basarsiz"] is not null)
{
    <div class="alert alert-danger">@TempData["basarsiz"]</div>
}



            

<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form asp-action="Giris">
                    <div class="form-outline mb-4">
                        <pr></pr>
                        <pr></pr>
                        <pr></pr> 
                   
                    </div>
                    <div class="form-outline mb-4">
                        <input asp-for="gmail" placeholder="Geçerli bir e-posta adresi girin" class="form-control" type="email" />
                        <label asp-for="gmail" type="email" for="form3Example3">Gmail</label>
                        <span asp-validation-for="gmail" class="text-danger"></span>
                    </div>


                    <div class="form-outline mb-4">
                        <input asp-for="sifre" placeholder="Geçerli bir şifre girin" class="form-control" type="password" />
                        <label asp-for="sifre" for="form3Example3">Şifre</label>
                        <span asp-validation-for="sifre" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <!-- Checkbox -->
                        <div class="form-check mb-0">
                            <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
                            <label class="form-check-label" for="form2Example3">
                                Beni Hatırla
                            </label>
                        </div>
                        <a href="/" class="text-body">Forgot password?</a>
                    </div>

                    <div class="text-center text-lg-start mt-4 pt-2">
                      
                        <div class="form-group">
                            <input type="submit" value="Giriş" class="btn btn-primary btn-lg" style="padding-left: 2.5rem; padding-right: 2.5rem;" />
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
    
</section>
