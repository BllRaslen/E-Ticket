@model List<web_1.ViewModels.kartlarModels>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <title>Flight Information Card</title>
    <style>
        /* أضف أسلوب CSS الحالي هنا */
        .container {
            display: flex;
            justify-content: center;
            margin-top: 10px;
        }

        .travel-info {
            width: 600px;
            height: 160px;
            box-shadow: 2px 2px 2px 2px #F8F8FF;
            border-bottom: solid blue;
            border-top: solid black;
            border-radius: 7px;
            padding: 10px;
            align-content: center;
            display: block;
        }

        .info {
            margin-top: 3px;
            padding: 20px;
            display: flex;
            justify-content: space-around;
        }

            .info .line {
                width: 50px;
                height: 2px;
                background-color: red;
                margin-top: 10px;
            }

        .infoplus {
            display: flex;
            margin-left:49%;
            margin-bottom:20px;
            padding:10px;
        }

            .infoplus .line {
                width: 100px;
                height: 2px;
                background-color: black;
                margin-top: 12px;
            }

        .price {
            width: 100px;
            height: 160px;
            box-shadow: 2px 2px 2px 2px #F8F8FF;
            border-bottom: solid blue;
            border-top: solid black;
            border-radius: 7px;
            padding: 10px;
            align-content: center;
            display: block;
        }

            .price label {
                margin-top: 50px;
            }
    </style>
</head>
<body>
    @foreach (var item in Model)
    {
        <div class="container mt-5">
            <div>
                <div class="card-header" data-bs-toggle="collapse" href="#flightInfo_@item.SeferId" role="button" aria-expanded="false" aria-controls="flightInfo_@item.SeferId">
                    <div class="container">
                        <div class="travel-info">
                            <div class="info">
                                <label >
                                    <img style="position: relative; width: 70px; height: 70px;  border: 3px solid #73AD21;" src="../images/@item.logo">
                                </label>
                                <div class="away">

                                    <span class="material-symbols-outlined">
                                        flight_takeoff
                                    </span>
                                    <label for="">@item.HavalimaniAdi</label>
                                    <label for="" class="line"></label> <span class="material-symbols-outlined">
                                        flight_land
                                    </span>

                                    <label for="">@item.HavalimaniAdi</label>
                                </div>
                            </div>
                            <div class="infoplus   style="margin-right:10px">
                                <label for="">@item.KalkisSaati</label> <div class="line"></div><label for="">@item.VarisSaati</label>
                             
                            </div>
                        </div>

                        <div class="price">
                            <label for="">
                                <span class="material-symbols-outlined">
                                    luggage
                                </span>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="collapse" id="flightInfo_@item.SeferId">
                    <div >
                        <div class="row mb-3">
                           
                                    <table class="table table-sm ">
                                        <thead>
                                            <tr>
                                                <th scope="col">kotuk</th>
                                                <th scope="col">tipi</th>
                                                <th scope="col">fiyat</th>
                                                <th scope="col">   </th>

                                            </tr>
                                        </thead>
                                  
                                    @foreach (var itemm in item.rezervasyons)
                                    {
                                  
                                     
                                      
                                           <tbody>
                                                   <tr>
                                    
                                          <td>@itemm.koltuk_sayisi</td>
                                          <td>@itemm.rezervasyonTipi</td>
                                          <td>@itemm.sefer_fiati</td>
                                                    <th scope="row">    <a asp-action="KoltukSec" asp-route-id="@itemm.rezervasyon_id" type="button" class="btn btn-primary">select</a></th>
                                        </tr>
                                        </tbody>
                                          

                                    
                                    }

                             
                            
                                </table>
                            
                            <!-- أضف المزيد من التفاصيل حسب الحاجة -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Add a click event listener to each card header
        document.querySelectorAll('.card-header').forEach(function (header) {
            header.addEventListener('click', function () {
                // Get the target collapse element (next sibling of the header)
                var collapseTarget = this.nextElementSibling;

                // Toggle the collapse state of the target element
                var isCollapsed = collapseTarget.classList.contains('show');
                if (!isCollapsed) {
                    // If not already collapsed, close other open collapses
                    document.querySelectorAll('.collapse.show').forEach(function (openCollapse) {
                        if (openCollapse !== collapseTarget) {
                            openCollapse.classList.remove('show');
                        }
                    });
                }
            });
        });
    </script>
</body>
</html>
