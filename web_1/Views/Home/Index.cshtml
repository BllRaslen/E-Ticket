@using web_1.ViewModels
@model HomeModels

<!DOCTYPE html>
<html>
<head>
    <title>GDC Airways</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Pacifico|Paytone+One" rel="stylesheet">
  
    <style>
        #second {
            width: 600px;

            border: 1px solid black;
            margin: 5% 15% 15% 70%;
            background: #e8eced;
            border-collapse: separate;
        }
        body {

    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
}

    </style>

</head>

<body style="background-image: url('image/myimage.png');  background-position: center;">


    <!--NavBar End-->
    <!--Heading/Moto-->
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div id="content">
                    <h1>@ViewBag.WelcomeMessage</h1>
                </div>
            </div>
        </div>
    </div>
    <!--Heading/Moto End-->
    <!--Tabs-->
    <div id="second" style="width:600px">
        <!--Tabs Headings-->
        <ul class="nav nav-tabs ">
            <li class="active"><a class="tabshead " data-toggle="tab" href="#home"><i class="fas fa-plane"></i> Flights</a></li>
            <li><a class="tabshead" data-toggle="tab" href="#menu1"><i class="far fa-address-book"></i> My Bookings</a></li>
            <li><a class="tabshead" data-toggle="tab" href="#menu2"><i class="far fa-clock"></i> Flight Status</a></li>
        </ul>
        <!--Tabs Headings End-->
        <!--Tabs Content-->
        <div class="tab-content" style="width:60%;">
            <!--Tab Content Flight-->
            <div id="home" style="height:400px; width:40%;" class="tab-pane fade in active  container">
                <h3 class="lab">Flights</h3>
                <form asp-action="Index">
                  <label type="email" for="form3Example3">Kalkiş Noktası</label>

                    <select id="select-state" style=" width: 250%; " asp-for="selectedKalkisHavalimani" placeholder="Pick a state...">
                            <option value="">Select a state...</option>
                            @foreach (var label in Model.HavalimaniModel)
                            {
                                <option value="@label.havalimani_id">@label.havalimani_adi</option>
                            }

                        </select>
                        <label type="email" for="form3Example3">Varış Noktası</label>

                    <select id="select-state2" style=" width: 250%; " asp-for="selectedvarisHavalimani" placeholder="Pick a state...">

                            <option value="">Select a state...</option>
                        @foreach (var label in Model.HavalimaniModel)
                            {
                                <option value="@label.havalimani_id">@label.havalimani_adi</option>
                            }

                        </select>



                        @section scripts{
                            <script>

                                $(document).ready(function () {
                                    $('#select-state').selectize();
                                    $('#select-state2').selectize();
                                });
                            </script>


                        }
                    <span class="lab">Departure:</span>
                    <input asp-for="selectedTarihi"  type="date" class="drop" id="depart">
        
                      
                    <p></p>
                   
                
                 
                     <button type="submit" name="submit" class="btn btn-primary btn-lg  " >Search Flight</button>
                </form>
            </div>
            <div style="height:150px;" id="menu1" class="tab-pane fade">
                <h3 class="lab2">My Bookings</h3>
                <form action="GDC-Ticket.php" method="POST">
                    <input type="text" name="ticketno" placeholder="Ticket Number" class="drop2">
                    <input type="text" name="lastname" placeholder="Passenger Last Name" class="drop2">
                    <input type="submit" name="submit" id="tickButton">
                </form>
            </div>
            <!--Tab Content My Bookings Ends-->
            <!--Tab Content Flight Status-->
            <div style="height:150px;" id="menu2" class="tab-pane fade">
                <h3 class="lab2">Flight Status</h3>
                <form action="GDC-FlightStatus.php" method="POST">
                    <input type="text" name="flightid" placeholder="Flight Number" class="drop2">
                    <select name="origin" class="drop2">
                        .
                        <option value="org">Origin</option>
                        <option value="Mumbai">MUMBAI</option>
                        <option value="Delhi">DELHI</option>
                        <option value="Banglore">BANGLORE</option>
                        <option value="Kolkata">KOLKATA</option>
                    </select>
                    <span class="lab2">Date:</span>
                    <input type="date" name="depart" class="drop21">
                  
                    <input type="submit" name="submit" id="fsButton">

                  
                </form>
            </div>
            <!--Tab Content Flight Status Ends-->
        </div>
        <!--Tab Contents End-->
    </div>
 
        </div>
    </div>
    <!--SignUp Modal End-->
  
    
    </div>
    <!--Login Modal End-->
</body>
</html>