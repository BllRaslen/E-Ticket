@model IEnumerable<EfCore2C.Models.airline.Models.Rezervasyon>

@{
    Layout = "_AdminLayout";
}

<h1>List</h1>
@if (TempData["basarli_rezervasyon_edit"] is not null)
{
    <div class="alert alert-success">@TempData["basarli_rezervasyon_edit"] </div>
}
@if (TempData["basarli_rezervasyon_delete"] is not null)
{
    <div class="alert alert-danger">@TempData["basarli_rezervasyon_delete"] </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.rezervasyon_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sefer_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.rezervasyonTipi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.koltuk_sayisi)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.rezervasyon_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sefer_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.rezervasyonTipi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.koltuk_sayisi)
            </td>
            <td>
                <div class="btn-group" role="group" aria-label="Action Buttons">
                    <a asp-action="Edit" asp-route-id="@item.rezervasyon_id" type="button" class="btn btn-primary">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@item.rezervasyon_id" type="button" class="btn btn-primary">Detaylar</a>
                    <a asp-action="Delete" asp-route-id="@item.rezervasyon_id" type="button" class="btn btn-primary">Sil</a>
                </div>
                </td>
        </tr>
}
    </tbody>
</table>
