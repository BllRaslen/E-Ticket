@model IEnumerable<EfCore2C.Models.Sefer>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Flight Information Card</title>
    <style>
        /* أضف أسلوب CSS الحالي هنا */

        .container {
            display: flex;
            justify-content: center;
            margin-top: 10px;
        }

        .travel-info {
            width: 600px;
            height: 150px;
            box-shadow: 2px 2px 2px 2px #F8F8FF;
            border-bottom: solid blue;
            border-top: solid black;
            border-radius: 7px;
            padding: 10px;
            align-content: center;
            display: block;
        }

        .info {
            margin-top: 3px;
            padding: 40px;
            display: flex;
            justify-content: space-around;
        }

            .info .line {
                width: 50px;
                height: 2px;
                background-color: red;
                margin-top: 10px;
            }

        .infoplus {
            display: flex;
            justify-content: center;
        }

            .infoplus .line {
                width: 100px;
                height: 2px;
                background-color: black;
                margin-top: 12px;
            }

        .price {
            width: 100px;
            height: 150px;
            box-shadow: 2px 2px 2px 2px #F8F8FF;
            border-bottom: solid blue;
            border-top: solid black;
            border-radius: 7px;
            padding: 10px;
            align-content: center;
            display: block;
        }

            .price label {
                margin-top: 50px;
            }
    </style>
</head>
<body>
    @foreach (var item in Model)
    {
        <div class="container mt-5">
            <div>
                <div class="card-header" data-bs-toggle="collapse" href="#flightInfo_@item.sefer_id" role="button" aria-expanded="false" aria-controls="flightInfo_@item.sefer_id">
                    <div class="container">
                        <div class="travel-info">
                            <div class="info">
                                <label for="">@item.sefer_id -MA-BLL</label>
                                <div class="away">
                                    <span class="material-symbols-outlined">
                                        flight_takeoff
                                    </span>
                                    <label for="">@item.kalkis_havalimani_id</label>
                                    <label for="" class="line"></label>
                                    <span class="material-symbols-outlined">
                                        flight_land
                                    </span>
                                    <label for="">@item.firma_id firmaid</label>
                                </div>
                            </div>
                            <div class="infoplus">
                                <label for="">@item.sefer_fiati</label>
                                <div class="line"></div>
                                <label for="">@item.kalkis_havalimani_id</label>
                            </div>
                        </div>
                        <div class="price">
                            <label for="">@item.sefer_fiati $</label>
                        </div>
                    </div>
                </div>
                <div class="collapse" id="flightInfo_@item.sefer_id">
                    <div class="card">
                        <div class="row mb-3">
                            <div class="col">
                                <h6 class="card-subtitle mb-2 text-muted">Flight Number</h6>
                                <p class="card-text">item.FlightNumber</p>
                            </div>
                            <!-- أضف المزيد من التفاصيل حسب الحاجة -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Add a click event listener to each card header
        document.querySelectorAll('.card-header').forEach(function (header) {
            header.addEventListener('click', function () {
                // Get the target collapse element (next sibling of the header)
                var collapseTarget = this.nextElementSibling;

                // Toggle the collapse state of the target element
                var isCollapsed = collapseTarget.classList.contains('show');
                if (!isCollapsed) {
                    // If not already collapsed, close other open collapses
                    document.querySelectorAll('.collapse.show').forEach(function (openCollapse) {
                        if (openCollapse !== collapseTarget) {
                            openCollapse.classList.remove('show');
                        }
                    });
                }
            });
        });
    </script>
</body>
</html>
