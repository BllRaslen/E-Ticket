@model IEnumerable<EfCore2C.Models.Havalimani>
﻿@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer localizer
@{
    Layout = "_AdminLayout";
  
}
@if (TempData["basarli_Havalimanis_create"] is not null)
{
    <div class="alert alert-success">@TempData["basarli_Havalimanis_create"]</div>
}
@if (TempData["basarli_Havalimanis_edit"] is not null)
{
    <div class="alert alert-success">@TempData["basarli_Havalimanis_edit"]</div>
}
@if (TempData["basarli_Havalimanis_delete"] is not null)
{
    <div class="alert alert-danger">@TempData["basarli_Havalimanis_delete"]</div>
}
<h1>@localizer["HavalimaniList_Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">@localizer["List_CreateNew"]</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @localizer["Havalimani_HavalimaniId"]
            </th>
            <th>
                @localizer["Havalimani_HavalimaniAdi"]
            </th>
            <th>
                @localizer["Havalimani_SehirId"]
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.havalimani_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.havalimani_adi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sehir_id)
                </td>
                <td>
                    <div class="btn-group" role="group" aria-label="Action Buttons">
                        <a asp-action="Edit" asp-route-id="@item.havalimani_id" type="button" class="btn btn-primary">@localizer["Edit"]</a>
                        <a asp-action="Details" asp-route-id="@item.havalimani_id" type="button" class="btn btn-primary">@localizer["List_Details"]</a>
                        <a asp-action="Delete" asp-route-id="@item.havalimani_id" type="button" class="btn btn-primary">@localizer["Delete"]</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
